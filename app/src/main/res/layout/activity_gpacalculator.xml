<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPACalculator">

    <TextView
        android:id="@+id/GPATitle"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="GPA"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CreditsTitle"
        android:layout_width="86dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="Credit"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/getGPA"
        android:layout_width="187dp"
        android:layout_height="87dp"
        android:text="Get GPA"
        android:textColor="#414040"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/overallGPA"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="375dp"
        android:layout_height="338dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="140dp"
        android:fillViewport="true"
        android:persistentDrawingCache="scrolling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:persistentDrawingCache="scrolling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="false"
                android:divider="@drawable/ic_launcher_foreground"
                android:dividerPadding="0dp"
                android:orientation="horizontal"
                android:paddingLeft="-25dp"
                android:persistentDrawingCache="scrolling">

                <Spinner
                    android:id="@+id/GPA1"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:id="@+id/credit1"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp">

                <Spinner
                    android:id="@+id/GPA2"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/credit2"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp">

                <Spinner
                    android:id="@+id/GPA3"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/credit3"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp">

                <Spinner
                    android:id="@+id/GPA4"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="12dp" />

                <Spinner
                    android:id="@+id/credit4"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp">

                <Spinner
                    android:id="@+id/GPA5"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="12dp" />

                <Spinner
                    android:id="@+id/credit5"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp">

                <Spinner
                    android:id="@+id/GPA6"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="12dp" />

                <Spinner
                    android:id="@+id/credit6"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="-20dp"
                android:showDividers="middle">

                <Spinner
                    android:id="@+id/GPA7"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="12dp" />

                <Spinner
                    android:id="@+id/credit7"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <Spinner
                    android:id="@+id/GPA8"
                    android:layout_width="180dp"
                    android:layout_height="56dp" />

                <Spinner
                    android:id="@+id/credit8"
                    android:layout_width="115dp"
                    android:layout_height="56dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>